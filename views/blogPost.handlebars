<div class="blog-container">
  <div class="blog-header">
    <div class="blog-author--no-cover">
      <h3>{{blog.author.name}}</h3>
    </div>
  </div>

  <div class="blog-body">
    <div class="blog-title">
      <h1><a >{{blog.title}}</a></h1>
    </div>
    <div class="blog-summary">
      <p>{{blog.content}}</p>
    </div>
    <div class="blog-tags">
      <ul>
        <li><a>#{{blog.category}}</a></li>
        <li><a>{{blog.formattedDate}} at {{blog.formattedTime}}</a></li>
      </ul>
    </div>
  </div>
  <div class="blog-footer">
    <ul>
      <li>Comments</li>
      <li class="comments"><a href="#"><svg class="icon-bubble">
            <use xlink:href="#icon-bubble"></use>
          </svg><span class="numero">{{len}}</span></a></li>
    </ul>
    <form method="post" action="/comment">
      <div class="input-group">
        <input type="hidden" id="blogid" name="blogid" value={{blog._id}} />
        <input type="hidden" id="type" name="type" value="1" />
        <input
          type="text"
          class="form-control rounded-corner"
          id="message"
          name="message"
          placeholder="Write a comment..."
        />&nbsp;&nbsp;
        <span class="input-group-btn p-l-10">
          <button
            class="btn btn-primary f-s-12 rounded-corner"
            type="submit"
          >Comment</button>
        </span>
      </div>
    </form>
    <br />
    {{#each comments}}
      <div class="timeline-comment-box">
        <div class="user"><img
            src="https://bootdey.com/img/Content/avatar/avatar3.png"
          /></div>
        <div class="input">
          <ul>
            <li style="font-weight: bold;">{{this.userid.name}}</li>
            <li><span>{{date}} at {{createdAt}}</span></li>
          </ul>
          <p>{{message}}</p>
        </div>
      </div>
      <br />
    {{/each}}

  </div>

</div>

<script type="text/javascript" src="//use.typekit.net/wtt0gtr.js"></script>
