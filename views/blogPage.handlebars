<div class="alert alert-success" role="alert">
  New Blogs are here
</div>

<div class="container">
 {{#each blogs}}
 <div class="card mb-3" style="max-width: 50%">
  <div class="row g-0">
    <div class="col-md-4">
      <img src="logo.png" height="50%" width="50%" class="img-fluid rounded-start" alt="img">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title"> <a href= /blogPost/{{this.slug}}>{{this.title}}</a></h5>
        <p class="card-text">{{this.content}}</p>
        <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
      </div>
    </div>
  </div>
</div>
{{/each}}
</div>


