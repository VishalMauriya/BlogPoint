<script src="https://cdn.jsdelivr.net/npm/handlebars@4.7.7/dist/handlebars.min.js"></script>

<script>
  let page = 2;
  const postsPerPage = {{POSTS_PER_PAGE}};

  const loadMorePosts = async () => {
     const loadMoreButton = document.getElementById('load-more-button');
     const uid = loadMoreButton.getAttribute('data-uid');

    const response = await fetch(`/api/posts?author=${uid}&page=${page}&limit=${postsPerPage}`);
    const { blogs } = await response.json();
    const blogList = document.getElementById('blog-list');
    for (const blog of blogs) {
      const date = new Date(blog.createdOn);
      const formattedDate = date.toLocaleString('en-US', { day: 'numeric', month: 'short', year: 'numeric' });
      blog.date = formattedDate; 
      blog.createdOn = date.toLocaleString('en-US', { hour: 'numeric', minute: 'numeric', hour12: true });

      const blogPost = document.createElement('div');
      blogPost.className = 'blog-post';
      blogPost.innerHTML = `
       <li class="timeline-sm-item">
            <span class="timeline-sm-date">${blog.createdOn}</span>
                <a href="/blogPost/${blog._id}" style="text-decoration: none;"><h5 class="mt-0 mb-1">${blog.title}</h5></a>
                    <p>${blog.date} &nbsp; &nbsp; #${blog.category}</p>
                     <p class="text-muted mt-2">${blog.content}</p>
        </li>
      `;
      blogList.appendChild(blogPost);
    }
    page++;
  };

  const loadMoreButton = document.getElementById('load-more-button');
  loadMoreButton.addEventListener('click', loadMorePosts);
</script>

 <script>
      const tablinks = document.querySelectorAll('.tablinks');
      tablinks.forEach(tablink => {
        tablink.addEventListener('click', (event) => {
          const tab = event.target.dataset.tab;
          showTab(tab);
        });
      });

      // Click on the first tab button by default when the page loads
      window.onload = () => {
        const defaultTab = document.querySelector('.nav a[data-tab="tab1"]');
        defaultTab.click();
      };

      function showTab(tab) {
        const tabcontents = document.querySelectorAll('.tabcontent');
        tabcontents.forEach(tabcontent => {
          if (tabcontent.id === tab) {
            tabcontent.style.display = 'block';
          } else {
            tabcontent.style.display = 'none';
          }
        });

        const newContent = `<p>New content for ${tab}.</p>`;
        const context = {};
        context[`${tab}Content`] = newContent;

        const template = Handlebars.compile(document.getElementById('tab-template').innerHTML);
        const html = template(context);

        const tabContainer = document.querySelector('.tab');
        tabContainer.insertAdjacentHTML('afterend', html);
      }
    </script>